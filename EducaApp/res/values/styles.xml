<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="loginButton">
        <item name="android:background">@color/ButtonBlue</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_margin">5dp</item>
        
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="loginTableRow">
        <item name="android:background">@color/White</item>
        <item name="android:textColor">@color/DarkSlateGray</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="loginEditText">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
          
    </style>
    <style name="modulosInfoText">
        <item name="android:layout_width">0px</item>
        <item name="android:gravity">center</item>
	    <item name="android:layout_weight">0.3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/retangulo</item>
          
    </style>
    
    <style name="titulo_especialista">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">2dp</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:textSize">20sp</item>
       
    </style>
    
    <style name="thumbnail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">2dp</item>
       
    </style>
    
    

</resources>
